<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeQuizz.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Username" PlaceholderColor="DimGray" Text="{Binding Name}" />
            <Entry Placeholder="Password" PlaceholderColor="DimGray" IsPassword="True" Text="{Binding Password}" />

            <Button Text="LOGIN" BackgroundColor="Accent"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Command="{Binding LoginUserCommand}"
                
                />
            
            
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>